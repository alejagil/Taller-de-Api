<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerApi.Xamarin.Views.PublicacionPage">
    <ListView x:Name="listPublicacion" ItemSelected="Publicacion_Seleccionado">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Usuario}" Detail="{Binding Descripcion}" TextColor="Black" DetailColor="Gray"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>